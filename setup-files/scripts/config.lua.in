 -- This file will be used by create-package.sh as an input.

local _ = MojoSetup.translate
local app_title = '@FULLNAME@'

Setup.Package
{
    vendor = "@VENDOR@",
    id = "@SHORTNAME@",
    description = app_title,
    version = "@VERSION@",
    splash = "@SPLASH@",
    splashpos = "top",
    superuser = false,
    write_manifest = true,
    support_uninstall = true,
    recommended_destinations =
    {
        MojoSetup.info.homedir
    },

    Setup.Readme
    {
        description = _("Readme"),
        source = _("README.mojo")
    },

    Setup.Option
    {
        value = true,
        required = true,
        disabled = false,
        bytes = @SIZE@,
        description = app_title,

        Setup.File
        {
            -- wildcards = "*";
            -- filter = function(fn)
            --     return string.gsub(fn, "^", "", 1), nil
            -- end,
            source = "base:///files.tar.xz",
        },

        Setup.DesktopMenuItem
        {
            disabled = false,
            name = app_title,
            genericname = app_title,
            tooltip = _(app_title),
            builtin_icon = false,
            icon = "@ICON@",
            commandline = "%0/@START@",
            workingdir = "%0",
            category = "Misc;"
        },
    }
}
